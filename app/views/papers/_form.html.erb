<%= form_for(@paper, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @paper.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@paper.errors.count, "error") %> prohibited this paper from being saved:</h4>

      <ul>
      <% @paper.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :manuscript_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :manuscript_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :status, options_for_select(status_options, @paper.status) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bioparts_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :bioparts_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :paragon_plus_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :paragon_plus_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reviewer_email1, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :reviewer_email1, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reviewer_email2, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :reviewer_email2, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reviewer_email3, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :reviewer_email3, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
