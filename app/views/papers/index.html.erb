<div class="page-header">
  <div class="toolbar">
    <%= link_to new_paper_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        New Paper
    <% end %>
  </div>

  <h1>Manuscripts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Manuscript</th>
        <th>Author</th>
        <th>Status</th>
        <th>Paragon plus url</th>
        <th>Bioparts url</th>

        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @papers) do |paper| %>
        <td><%= link_to_if !paper.manuscript_id.blank?,  paper.manuscript_id, paper %></td>
        <td><%= link_to_if !paper.author.blank?, paper.author, paper %></td>
        <td><%= link_to_if !paper.status.blank?, status_to_text(paper.status), paper %></td>
        <td><%= link_to_if !paper.paragon_plus_url.blank?, paper.paragon_plus_url, paper.paragon_plus_url, target: '_blank' %></td>
        <td><%= link_to_if !paper.bioparts_url.blank?, paper.bioparts_url, paper.bioparts_url, target: '_blank' %></td>

        <td><%= link_to 'Show', paper %></td>
        <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
        <td><%= link_to 'Export', export_paper_path(paper) %></td>
        <td><%= link_to 'Delete', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
