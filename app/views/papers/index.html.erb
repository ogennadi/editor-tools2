<div class="page-header">
  <%= link_to new_paper_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Paper
  <% end %>
  <h1>Listing papers</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Manuscript</th>
            <th>Author</th>
            <th>Status</th>
            <th>Paragon plus url</th>
        <th>Bioparts url</th>

        <th>Reviewer email1</th>
            <th>Reviewer email2</th>
            <th>Reviewer email3</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @papers) do |paper| %>
            <td><%= paper.manuscript_id %></td>
            <td><%= paper.author %></td>
            <td><%= paper.status %></td>
            <td><%= paper.paragon_plus_url %></td>
            <td><%= paper.bioparts_url %></td>
        <td><%= paper.reviewer_email1 %></td>
            <td><%= paper.reviewer_email2 %></td>
            <td><%= paper.reviewer_email3 %></td>
        <td><%= link_to 'Show', paper %></td>
        <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
        <td><%= link_to 'Export', export_paper_path(paper), method: :post %></td>
        <td><%= link_to 'Destroy', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
